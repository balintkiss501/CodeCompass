<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_1_0.xsd" version="1.0">

  <persistence-unit name="ParserPU" transaction-type="RESOURCE_LOCAL">

    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

    <class>parser.entity.File</class>
    <class>parser.entity.FileContent</class>
    <class>parser.entity.JavaAstNode</class>
    <class>parser.entity.Project</class>
    <class>parser.entity.Option</class>
    <class>parser.entity.BuildSource</class>
    <class>parser.entity.BuildTarget</class>
    <class>parser.entity.BuildAction</class>
    <class>parser.entity.BuildParameter</class>
    <class>parser.entity.BuildLog</class>
    <class>parser.entity.JavaType</class>
    <class>parser.entity.JavaMember</class>
    <class>parser.entity.JavaEnumConstant</class>
    <class>parser.entity.JavaVariable</class>
    <class>parser.entity.JavaFunction</class>
    <class>parser.entity.JavaImport</class>
    <class>parser.entity.JavaDocComment</class>
    <class>parser.entity.JavaAnnotation</class>

    <properties>
      <!-- <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBCDriver" /> -->
      <!-- <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> -->
      <!-- <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:javaparser.sqlite" /> -->
      <!-- <property name="javax.persistence.jdbc.user" value="parser" /> -->
      <!-- <property name="javax.persistence.jdbc.password" value="x" /> -->

      <!-- EclipseLink should create the database schema automatically -->
      <property name="eclipselink.ddl-generation" value="create-tables" />
      <property name="eclipselink.ddl-generation.output-mode" value="database" />
      <property name="eclipselink.logging.level" value="WARNING"/>
    </properties>

  </persistence-unit>
</persistence>

